<header id="header">
  <div class="logo">
    <div>
      <h1>Nope.</h1>
      <span class="byline">You will (probably) not get the last word.</span>
    </div>
  </div>
</header>

<div id="titleBar"><span class="title" data-action="copyHTML" data-args="logo">Nope.</span></div>

<nav id="nav">
  <ul>
    {{#if session.isAuthenticated}}
      <li>{{#link-to "index" }}Home{{/link-to}}</li>
      <li>{{#link-to "opponents"}}Friends{{/link-to}}</li>
      <li>{{#link-to "history"}}History{{/link-to}}</li>
      <li>{{#link-to "profile"}}Profile{{/link-to}}</li>
      <li>{{#link-to "help"}}Help{{/link-to}}</li>
      <li>{{#link-to "share"}}Share{{/link-to}}</li>
      <li><a href="#" {{ action 'invalidateSession' }}>Logout</a></li>
    {{else}}
      <li>{{#link-to 'login'}}Login{{/link-to}}</li>
      <li>{{#link-to 'signup'}}Signup{{/link-to}}</li>
    {{/if}}
  </ul>
</nav>
<nav class="bt-menu" id="bt-menu">
  <span class="bt-menu-trigger"><i></i></span>
  <ul class="bt-menu">
    {{#if session.isAuthenticated}}
      <li>{{#link-to "index"}}<i class="fa fa-home"></i><br>Home{{/link-to}}</li>
      <li>{{#link-to "opponents"}}<i class="fa fa-group"></i><br>Friends{{/link-to}}</li>
      <li>{{#link-to "history"}}<i class="fa fa-history"></i><br>History{{/link-to}}</li>
    {{else}}
      <li>{{#link-to 'login'}}<i class="fa fa-arrow-circle-right"></i><br>Login{{/link-to}}</li>
      <li>{{#link-to 'signup'}}<i class="fa fa-arrow-circle-right"></i><br>Signup{{/link-to}}</li>
    {{/if}}
  </ul>
  <ul class="bt-menu right">
    {{#if session.isAuthenticated}}
      <li>{{#link-to "profile"}}<i class="fa fa-user"></i><br>Profile{{/link-to}}</li>
      <li>{{#link-to "help"}}<i class="fa fa-question"></i><br>Help{{/link-to}}</li>
      <li>{{#link-to "share"}}<i class="fa fa-share"></i><br>Share{{/link-to}}</li>
      <li><a href="#" {{ action 'invalidateSession'}}><i class="fa fa-power-off"></i><br>Logout</a></li>
    {{/if}}
  </ul>
  <div class="bt-border bt-border-left"></div>
  <div class="bt-border bt-border-right"></div>
</nav>

<div id="main-wrapper">
  <div id="main" class="container">
    <div class="row">
      <div>
        <div class="content">
          {{outlet}}
        </div>
      </div>
    </div>
  </div>
</div>

<footer id="footer">We hope you enjoy Nope. Should you run into any issues, please <a href="mailto:contact@nope.wtf?subject=Nope issues">contact us</a></footer>
